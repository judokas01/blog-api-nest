  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest --run",
    "compose:up": "docker-compose -f ./dev-docker/docker-compose.yml --env-file ${ENV_FILE:-./.env} --profile local-dev up --remove-orphans",
    "compose:prod": "docker-compose -f ./prod-docker/docker-compose.yml --env-file ${ENV_FILE:-./.env.deploy} up --remove-orphans",
    "prisma:dev": "prisma migrate dev",
    "prisma:gen": "yarn prisma generate",
    "migrate:latest": "prisma migrate deploy",
    "migrate:deploy": "yarn _with-deploy-env prisma migrate deploy",
    "_with-test-env": "yarn env-cmd -f .env.test --silent",
    "_with-local-env": "yarn env-cmd -f .env.test --silent",
    "_with-deploy-env": "yarn env-cmd -f .env.deploy --silent"
  },
  "prisma": {
    "schema": "./src/infrastructure/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
